{
  "name": "Dark Mode For Virgool",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Enable dark mode on virgool.io.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/64.png",
    "128": "icons/128.png"
  },
  
  "default_locale": "en",
  "options_page": "src/options/index.html",
  "page_action": {
    "default_icon": "icons/16.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "contentSettings",
    "contextMenus",
    "https://virgool.io/*"

  ],
  "content_scripts": [
    {
      "matches": [
        "https://virgool.io/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    }
  ]
}